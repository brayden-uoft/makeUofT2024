{
  "manifest_version": 3,
  "name": "CarpySafe",
  "description": "IDN Spoofing Attack Defender",
  "version": "0.0.1",
  "background": {
    "service_worker": "src/service-worker.js",
    "type": "module"
  },
  "action": {
    "default_popup": "hello.html",
    "default_icon": "hello_extensions.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "webNavigation",
    "sidePanel",
    "tabs"
  ],
  "web_accessible_resources": [
    {
      "resources": ["src/homographs.json"],
      "matches": ["<all_urls>"]
    },
    {
      "resources": ["src/common_domains.txt"],
      "matches": ["<all_urls>"]
    }
  ]
}